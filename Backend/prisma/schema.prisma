generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User{
  id                     Int                 @id @default(autoincrement())
  username               String              @unique
  email                  String?             @unique
  passwordhash           String          
  createdAt              DateTime            @default(now())
  favorite               Favorite            @unique
  role                   String              @default("user")
}
model Favorite{
  id                     Int                 @id @default(autoincrement())
  title                  String
  user                   User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId                 Int                 @unique
  songs                  savedSong[]               
}
model Song{
  id                     Int                 @id @default(autoincrement()) 
  title                  String
  artist                 String
  coverUrl               String 
  ranking                SongRanking
  savedBy                savedSong[]
}
model savedSong{
  favorite               Favorite            @relation(fields: [favoriteId], references: [id])
  favoriteId             Int                 
  song                   Song                @relation(fields: [songId], references: [id]) 
  songId                 Int
  id                     Int                 @id @default(autoincrement())
}
model SongRanking{
  id                     Int                 @id @default(autoincrement())
  lat                    Float
  lng                    Float
  song                   Song                @relation(fields: [songId], references: [id]) 
  songId                 Int                
  rank                   Int                 @default(1)

  @@index([lat, lng])
}





